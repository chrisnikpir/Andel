<?PHP
session_start();
if($_SERVER["REQUEST_METHOD"] == $_POST)
{
    $usuario = "usuario";
    $pass= "usuario";
    if(! ($_POST['username'] == $usuario && $_POST['password'] == $pass) )
    {
        echo "<html>";
        echo "<title>Acceso denegado</title>";
        echo "<b>Loggin incorrecto</b>";               
        session_destroy() ;        
        return false;
    }
    else {    
        echo "<html>";
        echo "<title>Acceso permitido</title>"; 
        session_destroy();     
        return true;
    }
}
